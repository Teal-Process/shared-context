{
    "name": "Shared Context",
    "version": "0.1",
    "description": "A tool to start tangibly playing with the idea of digital proximity",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
		"activeTab"
    ],
    "content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content_scripts.js"]
		}
	],
    "manifest_version": 2
  }